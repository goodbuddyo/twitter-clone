
<div class="row medium-12 large-10 columns mg-vehicle-wrapper">
  <div class="grid-x grid-padding-x mg-toptext">
    <div class="small-12 medium-12 large-12  cell mg-form-div">

      <h2>Resend unlock instructions</h2>

    <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field  mg-login-input">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="actions mg-loginbutton ">
        <%= f.submit "Resend unlock instructions" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

    </div>
  </div>
</div>

