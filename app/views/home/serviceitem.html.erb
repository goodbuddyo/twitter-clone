<div class="row medium-12 large-12 columns mg-service-wrapper">
  
  <div class="grid-x grid-padding-x mg-buttonrow mg-service-details">
    <div class="large-6 medium-6 small-6  cell">
      <ul class="menu simple align-left">
        <li  class=""><a class="button info radius expand" href="/">Vehicles </a></li>
      </ul>
    </div>
    <div class="large-6 medium-6 small-6   cell">
      <ul class="menu simple align-right">
        <li class=""><a class="button info radius expand" href="/servicerecords">Service Records </a></li>
      </ul>
    </div>
  </div>
  <!--  close grid-x  -->
  
  <div class=" grid-x grid-padding-x mg-service-form">
    <!--
    the date picker is from http://foundation-datepicker.peterbeno.com/, it needs the right library pulled in
    form is from https://foundation.zurb.com/sites/docs/v/5.5.3/components/forms.html
    -->
    <div class="large-10 medium-10 small-12 columns">
      <div class="large-12 cell">
        <h3>2014 Mercedes ml350 - Blue</h3>
        <h4>Service Item For March 22, 2019 </h4>
      </div>
      
      <form>
        <!--   date picker is from
        https://rubygems.org/gems/foundation-datepicker-rails/versions/0.0.1
        https://github.com/peeyush1234/foundation-datepicker-rails
        http://foundation-datepicker.peterbeno.com/, it needs the right library pulled in
        form is from https://foundation.zurb.com/sites/docs/v/5.5.3/components/forms.html
        -->
        <div class="large-12 small-12 cell">
          <label>Name of Service
            <input type="text" placeholder="large-12.columns" />
          </label>
        </div>
        <div class="large-4 cell">
          <label>Date of Service
          <!--   <input type="text" placeholder="large-4.columns"   class="span2"  id="dp1" /> -->
            <!--
            < = f.label :start_date  ><br>
            < = f.text_field :start_date, data:{ provide:'datepicker' }  >
            -->
            <input type="text" class="span2" value="05/24/19" data-date-format="mm/dd/yy" id="dp2">

            <script>
            $(function(){
            $('#dp1').fdatepicker({
            initialDate: '02-12-1989',
            format: 'mm-dd-yyyy',
            disableDblClickSelection: false,
            leftArrow:'<<',
            rightArrow:'>>',
            closeIcon:'X',
            closeButton: true
            });
            });
            </script>

            <script>
            $('.datepicker').fdatepicker()
            $(function(){
            $('#dp2').fdatepicker({
            closeButton: true
            });
            });
            </script>

            
          </label>
        </div>
        <div class="large-4 cell">
          <label>Mileage
            <input type="text" placeholder="large-4.columns" />
          </label>
        </div>
        <div class="large-4 cell">
          <!--  <div class="row collapse"> -->
          <label>Aprox. Cost</label>
          <div class="small-9 columns">
            <input type="text" placeholder="small-9.columns" />
          </div>
          <!--  </div> -->
        </div>
        <div class="large-12 cell">
          <label>Comments
            <textarea placeholder="small-12.columns"></textarea>
          </label>
        </div>
        <div class="large-12 small-12 cell">
          <button href="#" class="button radius expand postfix">Save</button>
        </div>
      </div>
      <!--  close columns -->
    </div>
    <!--  close grid-x  -->
    
  </form>
</div>
